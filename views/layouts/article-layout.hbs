<!doctype html>
<html lang="en">
{{>head}}
<body>
<div class="wrapper__main">
    {{#if admin}}

    {{else}}
      <nav>
        <div class="nav-wrapper grey darken-3">
          <a href="/" class="blog-logo">gosha.app</a>
          <ul id="nav-mobile" class="right hide-on-med-and-down">
            <li id="nav-main-link"><a href="/">Головна</a></li>
            <li id="nav-gallery-link"><a href="/gallery">Фото</a></li>
            <li id="nav-music-link"><a href="/music">Музика</a></li>
            <li id="nav-contacts-link"><a href="/about-and-feedback">Контакти</a></li>
          </ul>
        </div>
      </nav>
      <ul id="slide-out" class="sidenav">
        <li id="nav-main-link"><a href="/">Головна</a></li>
        <li id="nav-gallery-link"><a href="/gallery">Фото</a></li>
        <li id="nav-music-link"><a href="/music">Музика</a></li>
        <li id="nav-contacts-link"><a href="/about-and-feedback">Контакти</a></li>
      </ul>
      <a href="#" data-target="slide-out" class="black-text sidenav-trigger"><i class="material-icons">menu</i></a>
    {{/if}}
    <div class="wrapper__content">
        {{{ body }}}
    </div>
    <div class="wrapper__comments-grade" id="{{fileName}}">
        <div class="wrapper__comments-like">
            {{#if userAlreadySetLike}}
                <button class="wrapper__comments-like-btn-liked">
                </button>
            {{else}}
                <button class="wrapper__comments-like-btn">
                </button>
            {{/if}}
            <span class="wrapper__comments-like-span">{{likes}}</span>
        </div>
        <div class="wrapper__comments-dislike">
            {{#if userAlreadySetDislike}}
                <button class="wrapper__comments-dislike-btn-disliked">
                </button>
            {{else}}
                <button class="wrapper__comments-dislike-btn">
                </button>
            {{/if}}
            <span class="wrapper__comments-dislike-span">{{dislikes}}</span>
        </div>
    </div>
    <footer class="footer">
        <span>www.gosha.app</span>
    </footer>
</div>
{{#each scripts}}
    <script src="{{this}}" type="module"></script>
{{/each}}
</body>
</html>
